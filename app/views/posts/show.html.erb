<main>
  <section class="postCont">
    <div class="postContP">
      <div class="postP">
        <h3 class="postTitleP">
          Post NÂº <%= @post.id %> by <%= @post.author.name %></h3>
        <div class="postCountersP">
          <p class="postText"> Comments: <%= @post.comments_counter %> - Likes: <%= @post.likes_counter %></p>
        </div>
      </div>
      <p class="contText"><%= @post.text %></p>
    </div>
    </div>

    <div class="postContP">
      <ul>
        <% @post.comments.each do |comment| %>
          <p class="contText"><%= comment.author.name %>: <%= comment.text %></p>
        <% end %>
      </ul>
    </div>
      <div class="interaction">
        <%= form_with(model: [@post, Comment.new], url: user_post_comments_path(@post.author, @post)) do |form|%>
          <div class="postContP">
            <h4 class= "addCom">Add a Comment</h4>
            <div>
              <%= form.text_area :text, required: true %>
            </div>
          </div>
          <div class="shareIt">
            <%= form.submit 'Share it!', class: "btn" %>
          </div>
        <% end %>
        <div class="likeBtn">
          <%= form_with(url: user_post_likes_path(@post.author, @post), method: :post) do |form| %>
            <%= form.submit 'Like', class: "btn"%>
          <% end %>        
        </div>
      </div>
  </section>
</main>
